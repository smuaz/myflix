%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  - if current_user
    %ul.col-md-4.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue"
      %li= link_to "People"
    = form_tag search_videos_path, method: 'get', class: "form col-md-5 navbar-form" do
      .form-group
        = text_field_tag :search, nil, class: "input form-control"
        = submit_tag "Search", class: "button btn btn-default"
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign Out", sign_out_path
