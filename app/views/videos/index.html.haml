- @categories.each do |cat|
  %article.video_category
    %header
      %h3
        = link_to cat.name, category_path(cat)
    .videos.row
      - cat.recent_videos.each do |video|
        .video.col-sm-2
          = link_to video_path(video), nil do
            %img(src="/tmp/#{video.small_cover_url}")

